[Rule]
DOMAIN-SUFFIX,ipw.cn,DIRECT
DOMAIN,api4.my-ip.io,DIRECT
DOMAIN,api6.my-ip.io,DIRECT

[Script]
☁ Cloudflare.DNS.event = type=event, event-name=network-changed, timeout=60, debug=1, script-path=https://raw.githubusercontent.com/Auraflare/DNS/releases/download/v{{@package 'version'}}/event.bundle.js, argument={{{scriptParams}}}
☁ Cloudflare.DNS.cron = type=cron, cronexp="\{{{cronexp}}}", timeout=60, debug=1, script-path=https://raw.githubusercontent.com/Auraflare/DNS/releases/download/v{{@package 'version'}}/event.bundle.js, argument={{{scriptParams}}}

[MITM]
hostname = %APPEND% api.cloudflare.com, *.ipw.cn, *.my-ip.io
