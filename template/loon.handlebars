[Argument]
CronExp = input,"*/10 * * * *",tag=Cron 表达式,desc=请填写 Cron 表达式，作为运行脚本定时任务的时间或周期。
{{{arguments}}}

[Rule]
DOMAIN-SUFFIX,ipw.cn,DIRECT
DOMAIN,api4.my-ip.io,DIRECT
DOMAIN,api6.my-ip.io,DIRECT

[Script]
network-changed script-path=https://raw.githubusercontent.com/Auraflare/DNS/releases/download/v{{@package 'version'}}/event.bundle.js, tag=☁ Cloudflare.DNS.event, timeout=60, argument={{{scriptParams}}}
cron {CronExp} script-path=https://raw.githubusercontent.com/Auraflare/DNS/releases/download/v{{@package 'version'}}/event.bundle.js, tag=☁ Cloudflare.DNS.cron, timeout=60, argument={{{scriptParams}}}
